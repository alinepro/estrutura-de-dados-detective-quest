#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// STRUCT: Sala
//  Representa um c√¥modo da mans√£o (√°rvore bin√°ria)
  
typedef struct Sala {
    char nome[50];
    char pista[100];   // Pode ser vazia ("") se n√£o houver pista
    struct Sala* esquerda;
    struct Sala* direita;
} Sala;

//   STRUCT: PistaNode
//   N√≥ da √°rvore BST que armazena pistas coletadas
  
typedef struct PistaNode {
    char pista[100];
    struct PistaNode* esquerda;
    struct PistaNode* direita;
} PistaNode;

//   FUN√á√ÉO: criarSala
//   Cria dinamicamente uma sala com nome e pista opcional

Sala* criarSala(const char* nome, const char* pista) {
    Sala* nova = (Sala*) malloc(sizeof(Sala));

    if (nova == NULL) {
        printf("Erro de aloca√ß√£o de mem√≥ria!\n");
        exit(1);
    }

    strcpy(nova->nome, nome);
    strcpy(nova->pista, pista);
    nova->esquerda = NULL;
    nova->direita = NULL;

    return nova;
}

//   FUN√á√ÉO: criarPistaNode
//   Cria um novo n√≥ para a √°rvore BST de pistas
  
PistaNode* criarPistaNode(const char* pista) {
    PistaNode* novo = (PistaNode*) malloc(sizeof(PistaNode));

    if (novo == NULL) {
        printf("Erro de aloca√ß√£o de mem√≥ria!\n");
        exit(1);
    }

    strcpy(novo->pista, pista);
    novo->esquerda = NULL;
    novo->direita = NULL;

    return novo;
}

//   FUN√á√ÉO: inserirPista
// Insere uma pista na BST mantendo ordem alfab√©tica
   
PistaNode* inserirPista(PistaNode* raiz, const char* pista) {

    if (raiz == NULL)
        return criarPistaNode(pista);

    // strcmp < 0 ‚Üí vai para esquerda
    if (strcmp(pista, raiz->pista) < 0)
        raiz->esquerda = inserirPista(raiz->esquerda, pista);

    // strcmp > 0 ‚Üí vai para direita
    else if (strcmp(pista, raiz->pista) > 0)
        raiz->direita = inserirPista(raiz->direita, pista);

    // Se for igual, n√£o insere duplicada

    return raiz;
}


//   FUN√á√ÉO: exibirPistas
// Exibe as pistas em ordem alfab√©tica (percorrimento in-order)
   
void exibirPistas(PistaNode* raiz) {
    if (raiz != NULL) {
        exibirPistas(raiz->esquerda);
        printf("- %s\n", raiz->pista);
        exibirPistas(raiz->direita);
    }
}

// FUN√á√ÉO: explorarSalasComPistas
// Permite navega√ß√£o e coleta autom√°tica de pistas
   
void explorarSalasComPistas(Sala* atual, PistaNode** arvorePistas) {
    char opcao;

    while (atual != NULL) {

        printf("\nVoc√™ est√° em: %s\n", atual->nome);

        // Se houver pista na sala, coleta automaticamente
        if (strlen(atual->pista) > 0) {
            printf("üîé Pista encontrada: %s\n", atual->pista);
            *arvorePistas = inserirPista(*arvorePistas, atual->pista);

            // Evita coletar a mesma pista novamente
            strcpy(atual->pista, "");
        }

        printf("\nEscolha uma dire√ß√£o:\n");
        if (atual->esquerda != NULL)
            printf("e - Ir para a esquerda\n");
        if (atual->direita != NULL)
            printf("d - Ir para a direita\n");
        printf("s - Sair da explora√ß√£o\n");

        printf("Op√ß√£o: ");
        scanf(" %c", &opcao);

        if (opcao == 'e' && atual->esquerda != NULL)
            atual = atual->esquerda;

        else if (opcao == 'd' && atual->direita != NULL)
            atual = atual->direita;

        else if (opcao == 's')
            break;

        else
            printf("Op√ß√£o inv√°lida!\n");
    }
}

//   FUN√á√ÉO PRINCIPAL
//   Monta o mapa da mans√£o e inicia o jogo
  
int main() {

    PistaNode* arvorePistas = NULL;

    // Constru√ß√£o fixa da mans√£o com pistas
    Sala* hall = criarSala("Hall de Entrada", "Pegadas na entrada");

    hall->esquerda = criarSala("Sala de Estar", "Copo quebrado no ch√£o");
    hall->direita = criarSala("Cozinha", "Faca suja encontrada");

    hall->esquerda->esquerda = criarSala("Biblioteca", "Livro fora da estante");
    hall->esquerda->direita = criarSala("Escrit√≥rio", "");

    hall->direita->esquerda = criarSala("Jardim", "Pegadas na terra");
    hall->direita->direita = criarSala("Por√£o", "Caixa trancada suspeita");

    printf("============================================\n");
    printf("  DETECTIVE QUEST - N√çVEL AVENTUREIRO\n");
    printf("============================================\n");

    explorarSalasComPistas(hall, &arvorePistas);

    printf("\n============================================\n");
    printf("Pistas coletadas (ordem alfab√©tica):\n");
    printf("============================================\n");

    if (arvorePistas == NULL)
        printf("Nenhuma pista foi coletada.\n");
    else
        exibirPistas(arvorePistas);

    return 0;
}
