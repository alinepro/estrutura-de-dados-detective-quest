#include <stdio.h>
#include <stdlib.h>
#include <string.h>

//STRUCT: Sala - Representa um cômodo da mansão (nó da árvore binária)
  
typedef struct Sala {
    char nome[50];
    struct Sala* esquerda;
    struct Sala* direita;
} Sala;

//FUNÇÃO: criarSala - Cria dinamicamente uma nova sala com o nome informado
  
Sala* criarSala(const char* nome) {
    Sala* novaSala = (Sala*) malloc(sizeof(Sala));
    
    if (novaSala == NULL) {
        printf("Erro ao alocar memória!\n");
        exit(1);
    }

    strcpy(novaSala->nome, nome);
    novaSala->esquerda = NULL;
    novaSala->direita = NULL;

    return novaSala;
}

//FUNÇÃO: explorarSalas - Permite que o jogador navegue pela mansão interativamente

void explorarSalas(Sala* atual) {
    char opcao;

    while (atual != NULL) {
        printf("\nVocê está em: %s\n", atual->nome);

